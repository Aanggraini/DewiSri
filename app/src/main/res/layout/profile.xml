<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageButton
            android:id="@+id/user_profile_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="false"
            android:layout_marginTop="40dp"
            android:background="@drawable/profile_circular_border_imageview"
            android:cropToPadding="true"
            android:elevation="14dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile" />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#620808"
            android:elevation="4dp"
            android:paddingBottom="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="190dp"
                android:text="Profil Saya"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_label_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_profile_name"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:text="Nama"
                android:textColor="#fff"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/user_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_label_nama"
                android:layout_marginLeft="40dp"
                android:text="Satrya Bagus Nurawan"
                android:textColor="#fff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/user_label_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_nama"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:text="Email"
                android:textColor="#fff"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_label_email"
                android:layout_marginLeft="40dp"
                android:text="bagusatrya1901@gmail.com"
                android:textColor="#fff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/user_label_telepon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_email"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:text="No. Telp"
                android:textColor="#fff"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/user_telepon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_label_telepon"
                android:layout_marginLeft="40dp"
                android:text="08585xxxxx"
                android:textColor="#fff"
                android:textSize="20sp" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Reset Password"
                android:textColor="#de3242" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>